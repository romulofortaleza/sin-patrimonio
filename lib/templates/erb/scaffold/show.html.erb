<%%= render 'header' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Mostrando <%= singular_table_name %></h5>
        </div>
        <div class="ibox-content">
            <form class="form-horizontal">
              <% attributes.reject(&:password_digest?).each do |attribute| -%>
                <div class="form-group"><label class="col-sm-2 control-label"><%= attribute.human_name %></label>
                  <div class="col-sm-10">
                    <p class="form-control-static">
                      <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
                    </p>
                  </div>                  
                </div>
              <% end -%>
              <div class="hr-line-dashed">
              </div>                    
              <div class="form-group">
                  <div class="col-sm-4">
                      <%%= link_to 'Voltar', <%= index_helper %>_path, :class => 'btn btn-white' %>            
                      <%%= link_to 'Editar', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => "btn btn-primary" %>               
                  </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>  