<%%= form_with(model: <%= model_resource_name %>, local: true, class: 'form-horizontal') do |form| %>
  <% attributes.each do |attribute| -%>
    <div class="form-group <%%= <%= singular_table_name %>.errors[:<%= attribute.column_name %>].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label"><%= attribute.human_name %></label>
      <div class="col-sm-10">
        <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %>, class: 'form-control' %>
        <%% if <%= singular_table_name %>.errors[:<%= attribute.column_name %>].any? %>
          <span class="help-block m-b-none font-bold"><%%= <%= singular_table_name %>.errors[:<%= attribute.column_name %>].first %></span>
        <%% end %>
      </div>
    </div>    
  <% end -%>
  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <%%= link_to 'Cancelar', <%= index_helper %>_path, :class => 'btn btn-white' %>     
        <%%= form.submit 'Salvar', :class => 'btn btn-primary' %>
    </div>
  </div>
<%% end %>